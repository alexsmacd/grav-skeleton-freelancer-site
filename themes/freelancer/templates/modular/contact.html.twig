<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                {{ content }}
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                {% if config.plugins.simple_form.enabled %}
                    {% set simple_form_config = page.header.simple_form ?: config.themes.freelancer.simple_form %}
                    {{ simple_form(simple_form_config) }}
                {% endif %}
            </div>
        </div>
    </div>
</section>
